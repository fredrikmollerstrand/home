# .bash_alias

# type dot-dot-dot, do nothing
alias ..=''
alias ...=''

# simple aliases
alias ll='ls -l'
alias lla='ls -la'

# a little piece of the history
alias h='history | tail -n 32'

# shell - mac os x specific obv.
alias shell='/Applications/Utilities/Terminal.app/Contents/MacOS/Terminal > /dev/null 2>&1 &'

# rails
alias ss=script/server
alias sc=script/console
alias gen=script/generate

# git
alias status='git status'
alias commit='git commit'
alias diff='git diff'
alias branch='git branch'	
alias checkout='git checkout'

# scheme
alias mz='mzscheme -m'

# textmate
function m() {
	mate $@ & 2> /dev/null
}

# hadoop
alias hadoop='~/code/hadoop/current/bin/hadoop'
