# aliaser

alias ..=''
alias ...=''

# simple aliases
alias ll='ls -l'
alias lla='ls -la'

# a little piece of the history
alias h='history | tail -n 32'

# shell
alias shell='/Applications/Utilities/Terminal.app/Contents/MacOS/Terminal > /dev/null 2>&1 &'


# rails
alias ss=script/server
alias sc=script/console
alias gen=script/generate

# git
alias status='git-status'
alias commit='git-commit'
alias diff='git-diff'
alias branch='git-branch'	
alias checkout='git-checkout'

# scheme
alias mz='mzscheme -m'

# textmate
function m() {
	mate $@ & 2> /dev/null
}

# subversion
# incidentally, this sequence of aliases mimic my workflow
alias sta='svn status'
alias sup='svn up'
alias sdi='svn diff'
alias sco='svn commit'

# view svn diff in textmate
alias sdim='svn diff | mate'

