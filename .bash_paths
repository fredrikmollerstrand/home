# mess with $PATH #
###################

# default - homebrew installs in /usr/local take precedence.
PATH=/usr/local/bin:/usr/local/sbin:/usr/bin:/bin:/usr/sbin:/sbin

# ~/bin
PATH=$PATH:$HOME/bin

# hadoop + hbase
PATH=$PATH:/usr/local/hadoop/bin
PATH=$PATH:/usr/local/hbase/bin

# mysql
PATH=$PATH:/usr/local/mysql/bin

# cloudera ec2
PATH=$PATH:/usr/local/cloudera-ec2

# tex
PATH=$PATH:/usr/local/texlive/2011/bin/x86_64-darwin

# python packages installed with pip have their binaries in the cellar.
PATH=$PATH:/usr/local/Cellar/python/2.7/bin
PYTHONPATH=$PYTHONPATH:/Users/fredrik/editd

# npm installs packages here.
NODE_PATH=/usr/local/lib/node

export PATH
export PYTHONPATH
export NODE_PATH
